{
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  "prettier.singleQuote": true,
  "tslint.autoFixOnSave": true,
  "prettier.printWidth": 140,
  "editor.showFoldingControls": "always",
  "editor.wordWrap": "off",
  "eslint.enable": false,
  "files.exclude": {
    "**/app/**/*.js.map": true,
    "**/app/**/*.js": {
        "when": "$(basename).ts"
        },
    "typings": true,
    "node_modules": true,
    ".history": true,
    ".vscode": true // this excludes the folder
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/documentation": true
  },
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "typescript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceAfterConstructor": true,
"javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[*]": {
    "indent_size": 2
  }
}
